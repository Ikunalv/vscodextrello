{
  "name": "vscodextrello",
  "displayName": "VSCode X Trello",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:VSCodeXTrello.createTrelloCard",
    "onCommand:VSCodeXTrello.getTrelloToken",
    "onCommand:VSCodeXTrello.setTrelloToken"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "VSCodeXTrello.createTrelloCard",
        "title": "VSCodeXTrello: Create Trello Card"
      },
      {
        "command": "VSCodeXTrello.getTrelloToken",
        "title": "VSCodeXTrello: Get Trello Token"
      },
      {
        "command": "VSCodeXTrello.setTrelloToken",
        "title": "VSCodeXTrello: Set Trello Token"
      }
    ],
    "configuration": {
      "title": "VSCode X Trello Configuration",
      "properties": {
        "vscodextrello.trelloToken": {
          "type": "string",
          "description": "Your Trello Token",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.48.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "base-64": "^0.1.0",
    "open": "0.0.5",
    "request": "^2.88.2"
  }
}
